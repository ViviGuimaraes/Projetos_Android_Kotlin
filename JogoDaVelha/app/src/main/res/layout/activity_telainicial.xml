<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/azul_escuro"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".Telainical"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jogo Da Velha"
        android:textColor="@color/white"
        android:textSize="40sp"
        tools:fontFamily="@font/delius_unicase"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/BtJogador"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:background="@drawable/botao"
        android:fontFamily="@font/delius_unicase"
        android:textSize="23sp"
        android:text="Jogador  X  jogador"
        android:textColor="@color/azul_escuro"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="90dp"
       />

    <Button
        android:id="@+id/BtPC"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:background="@drawable/botao"
        android:fontFamily="@font/delius_unicase"
        android:textSize="25sp"
        android:text="Jogador   x  PC"
        android:textColor="@color/azul_escuro"
        android:layout_marginBottom="190dp"
        />



</LinearLayout>