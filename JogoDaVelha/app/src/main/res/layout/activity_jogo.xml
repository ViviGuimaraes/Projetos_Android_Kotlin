<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/placar"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".jogo">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:text="Jogo Da Velha"
        android:textColor="@color/white"
        android:textSize="27sp"
        tools:fontFamily="@font/delius_unicase" />


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginBottom="25dp"
        android:gravity="center"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/nome1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:text="Jogador-1"
            android:textColor="@color/white"
            android:textSize="20sp"
            tools:fontFamily="@font/delius_unicase" />

        <TextView
            android:id="@+id/nome2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:text="P C"
            android:textColor="@color/white"
            android:textSize="20sp"
            tools:fontFamily="@font/delius_unicase" />
    </LinearLayout>

    <TableLayout
        android:layout_width="335dp"
        android:layout_height="300dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@drawable/velha">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            >

            <Button

                android:id="@+id/b1"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_margin="10dp"

                />

            <Button
                android:id="@+id/b2"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:text="" />

            <Button
                android:id="@+id/b3"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_margin="10dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            >

            <Button
                android:id="@+id/b4"
                android:layout_width="10dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:text="" />

            <Button
                android:id="@+id/b5"
                android:layout_width="10dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:text="" />

            <Button
                android:id="@+id/b6"
                android:layout_width="10dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:text="" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            >

            <Button
                android:id="@+id/b7"
                android:layout_width="10dp"
                android:layout_height="60dp"
                android:layout_margin="10dp" />

            <Button
                android:id="@+id/b8"
                android:layout_width="10dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:text="" />

            <Button
                android:id="@+id/b9"
                android:layout_width="10dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:text="" />
        </TableRow>
    </TableLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/BtPlacar"
            android:layout_width="115dp"
            android:layout_height="35dp"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="90dp"
            android:background="@drawable/botao"
            android:fontFamily="@font/delius_unicase"
            android:text="Placar"
            android:textColor="@color/azul_escuro"
            android:textSize="16sp" />

        <Button
            android:id="@+id/BtNvJogo"
            android:layout_width="125dp"
            android:layout_height="35dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="90dp"
            android:background="@drawable/botao"
            android:fontFamily="@font/delius_unicase"
            android:text="Novo Jogo"
            android:textColor="@color/azul_escuro"
            android:textSize="16sp" />

        <Button
            android:id="@+id/BtMenuJogo"
            android:layout_width="115dp"
            android:layout_height="35dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="90dp"
            android:background="@drawable/botao"
            android:fontFamily="@font/delius_unicase"
            android:text="Menu"
            android:textColor="@color/azul_escuro"
            android:textSize="16sp" />


    </LinearLayout>
</LinearLayout>