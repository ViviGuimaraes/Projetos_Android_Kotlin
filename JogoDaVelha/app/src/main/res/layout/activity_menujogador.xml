<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".menujogador"
    android:background="@color/azul_escuro"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jogo Da Velha"
        android:textColor="@color/white"
        android:textSize="40sp"
        tools:fontFamily="@font/delius_unicase"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="10dp"/>

    <TextView

        android:layout_width="365dp"
        android:layout_height="44dp"
        android:background="@color/vinho"
        android:fontFamily="@font/delius_unicase"
        android:textSize="30dp"
        android:text=" Jogador X Jogador"
        android:textColor="@color/white"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="80dp"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="jogador 1"
        android:textColor="@color/white"
        android:textSize="15sp"
        tools:fontFamily="@font/delius_unicase"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="15dp"/>

    <EditText
        android:id="@+id/nomeJogador1"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:textColor="@color/black"
        android:hint="     Digite seu nome "
        android:background="@drawable/botao"
         />




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="jogador 2"
        android:textColor="@color/white"
        android:textSize="15sp"
        tools:fontFamily="@font/delius_unicase"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="15dp"/>

    <EditText
        android:id="@+id/nomeJogador2"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:textColor="@color/black"
        android:hint="     Digite seu nome "
        android:background="@drawable/botao"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginTop="0sp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/BtJogar"
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="90dp"
            android:background="@drawable/botao"
            android:fontFamily="@font/delius_unicase"
            android:text="Jogar"
            android:textColor="@color/azul_escuro"
            android:textSize="23sp" />

        <Button
            android:id="@+id/BtMenu"
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="90dp"
            android:background="@drawable/botao"
            android:fontFamily="@font/delius_unicase"
            android:text="Menu"
            android:textColor="@color/azul_escuro"
            android:textSize="23sp" />


    </LinearLayout>

</LinearLayout>