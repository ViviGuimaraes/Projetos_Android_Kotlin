<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Placar"
    android:background="@drawable/placar"
    android:orientation="vertical"
    android:gravity="center"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jogo Da Velha"
        android:textColor="@color/white"
        android:textSize="35sp"
        tools:fontFamily="@font/delius_unicase"
        tools:layout_editor_absoluteX="72dp"
        tools:layout_editor_absoluteY="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="70dp"
        android:text="Placar  : "
        android:textColor="@color/white"
        android:textSize="27sp"
        tools:fontFamily="@font/delius_unicase"
        tools:layout_editor_absoluteX="72dp"
        tools:layout_editor_absoluteY="25dp" />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginBottom="145dp"
        android:gravity="center"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/nome1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:text="Jogador-1 "
            android:textColor="@color/white"
            android:textSize="20sp"
            tools:fontFamily="@font/delius_unicase" />

        <TextView
            android:id="@+id/nome2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="40dp"
            android:text=" P C "
            android:textColor="@color/white"
            android:textSize="20sp"
            tools:fontFamily="@font/delius_unicase" />
    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:orientation="horizontal">


        <Button
            android:id="@+id/BtNvJogoPlacar"
            android:layout_width="125dp"
            android:layout_height="35dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="130dp"
            android:layout_marginBottom="90dp"
            android:background="@drawable/botao"
            android:fontFamily="@font/delius_unicase"
            android:text="Novo Jogo"
            android:textColor="@color/azul_escuro"
            android:textSize="16sp" />

        <Button
            android:id="@+id/BtMenuPlacar"
            android:layout_width="115dp"
            android:layout_height="35dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="130dp"
            android:layout_marginBottom="90dp"
            android:background="@drawable/botao"
            android:fontFamily="@font/delius_unicase"
            android:text="Menu"
            android:textColor="@color/azul_escuro"
            android:textSize="16sp" />


    </LinearLayout>


</LinearLayout>